<body class="login">
<div class="container" align="center" style="margin-top: 200px;margin-bottom: 180px;">
<h2>로그인</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<table width="450px;" border="0">
  <tr border="0" border-color="black">
    <td>
        <div class="field">
          <%= f.label :이메일 %><br />
          <%= f.email_field :email, class: "form-control", autofocus: true %>
      </div>
    </td>
  </tr>
  <tr>
    <td>
    <div class="field">
      <%= f.label :비밀번호 %><br />
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
    </td>
  </tr>
  <tr>
    <td>
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :자동로그인 %>
      </div>
    <% end -%>
    </td>
  </tr>
  <tr>
    <td>
      <div class="actions" align="center"><br/>
      <%= f.submit "로그인", class: "btn btn-primary" %><br/><br/>
      <% end %>
      </div>
    </td>
  </tr>
  <tr>
    <td align="center">
    <%= render "devise/shared/links" %>
    </td>
  </tr>
</table>
</div>
</body>